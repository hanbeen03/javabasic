<%@ page import="java.sql.*" %>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	String deletePw = request.getParameter("deletePw");
	String sessionPw = (String)session.getAttribute("session_pw");
	String sessionId = (String)session.getAttribute("session_id");
	
	if(deletePw.equals(sessionPw)) {
		Connection con = null;
		PreparedStatement pstmt = null;
		
		try {
			Class.forName("com.mysql.cj.jdbc.Driver");
			
			String url = "jdbc:mysql://localhost/ict03";
			
			con = DriverManager.getConnection(url, "root", "mysql");
			
			String sql = "DELETE * FROM users WHERE id = ?";
			
			pstmt = con.prepareStatement(sql);
			
			pstmt.setString(1, sessionId);
			
			pstmt.executeUpdate();
			
			session.invalidate();
			
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {
				if( con != null && !con.isClosed()) {
					con.close();
				}
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
		
	} else {
		session.invalidate();
		response.sendRedirect("users_login_form.jsp");
	}
	
%>
